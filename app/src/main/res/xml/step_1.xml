<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Transition
        app:constraintSetEnd="@id/animationTargetEnd"
        app:constraintSetStart="@id/animationTargetStart"
        app:duration="2000">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/animationTarget" />

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="360"
                app:framePosition="50"
                app:motionTarget="@id/animationTarget" />

            <KeyAttribute
                android:rotation="720"
                app:framePosition="100"
                app:motionTarget="@id/animationTarget" />
        </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/animationTargetStart">
        <Constraint
            android:id="@+id/animationTarget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/animationTargetEnd">
        <Constraint
            android:id="@+id/animationTarget"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </ConstraintSet>

</MotionScene>