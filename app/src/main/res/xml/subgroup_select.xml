<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/subgroup_state_2"
        app:constraintSetStart="@id/subgroup_state_1"
        app:duration="300"></Transition>
    <ConstraintSet android:id="@+id/subgroup_state_1">
        <Constraint
            android:id="@id/subgroup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/subgroup_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/subgroup_selector"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:translationY="-16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subgroup_1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/subgroup_state_2">
        <Constraint
            android:id="@id/subgroup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/subgroup_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:id="@id/subgroup_selector"
            android:translationY="-16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subgroup_2" />
    </ConstraintSet>
</MotionScene>