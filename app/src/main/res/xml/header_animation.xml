<?xml version="1.0" encoding="utf-8"?>

<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@id/cs_header_end"
        app:constraintSetStart="@id/cs_header_start"
        app:duration="300">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/major_name" />
    </Transition>


    <ConstraintSet android:id="@+id/cs_header_start">
        <Constraint
            android:id="@id/week_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/major_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/week_reference"
            app:layout_constraintTop_toBottomOf="@id/week_reference" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/cs_header_end">
        <Constraint
            android:id="@id/week_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/major_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/week_reference"
            app:layout_constraintTop_toBottomOf="@id/week_reference" />
    </ConstraintSet>
</MotionScene>